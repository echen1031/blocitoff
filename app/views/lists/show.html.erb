<div class="page-header">
  <h1><%= @list.description %></h1>
<% if policy(@list).edit? %>
  <%= link_to "Edit", edit_list_path(@list), class: 'btn btn-sucess' %>
<% end %>
</div>
<div class="col-md-4">
  <ul class="list-group">
    <% @list_items.each do |item| %>
    <li class="list-group-item">
      <%= item.content %>
    </li>
  <% end %>
  </ul>
</div>
