<div class="row">
  <div class='row nested-fields'>
    <%= f.input_field :id, as: :hidden %>
    <div class="col-md-8">
      <ul class="form-group">
        <%= f.text_field :content, :wrapper => 'bootstrap', class: 'form-control', placeholder: "Add your items here" %>
      </ul>
    </div>
    <div class="col-md-4">
      <ul class="form-group">
        <%= link_to_remove_association "remove item", f, :render_options => {:wrapper => "nested-fields"}, class: 'btn btn-danger dynamic' %>
      </ul>
    </div>
  </div>
</div>
